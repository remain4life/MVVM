<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TitleTextView" parent="DefaultTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CardTextView" parent="DefaultTextView">
        <item name="android:textColor">@color/colorButtonText</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DefaultTextView">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CardViewTransparent">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/colorTransparentButton</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="CardViewActionButton" parent="CardViewTransparent">
        <item name="cardElevation">4dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:layout_margin">10dp</item>
    </style>

</resources>
